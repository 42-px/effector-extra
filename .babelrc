{
  "presets": [
    [
      "@babel/preset-env",
      {
        "modules": false,
        "targets": {
          "node": "current"
        }
      }
    ]
  ],
  "plugins": [
    [
      "effector/babel-plugin",
      {
        "factories": [
          "src/attach-wrapper",
          "src/effector-event-batcher"
        ]
      }
    ]
  ],
  "env": {
    "test": {
      "presets": [
        "@babel/preset-typescript"
      ],
      "plugins": [
        "@babel/plugin-transform-modules-commonjs"
      ]
    }
  }
}